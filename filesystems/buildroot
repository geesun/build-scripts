BUILDROOT_BUILD_ENABLED=1
BUILD_SCRIPTS=$BUILD_SCRIPTS
BUILDROOT_PATH=buildroot
BUILDROOT_ARCH=$LINUX_ARCH
BUILDROOT_RAMDISK_PATH=build-scripts/ramdisk
BUILDROOT_OUT_DIR=out/$LINUX_ARCH
BUILDROOT_RAMDISK_BUILDROOT_PATH=$BUILDROOT_PATH/$BUILDROOT_OUT_DIR/images

TARGET_BINS_HAS_DTB_RAMDISK=1
TARGET_BINS_HAS_BUILDROOT=1

LINUX_CONFIG_LIST="$LINUX_CONFIG_LIST $BUILDROOT_LINUX_CONFIG_LIST"
LINUX_CONFIG_DEFAULT=$BUILDROOT_LINUX_CONFIG_LIST

#Append TARGET_BINS_COPY_LIST_BUILDROOT into TARGET_BINS_COPY_LIST

index=${#TARGET_BINS_COPY_LIST[@]}
buildroot_length=${#TARGET_BINS_COPY_LIST_BUILDROOT[@]}
for (( i=0; i<${buildroot_length}; i++)); do
    TARGET_BINS_COPY_LIST[$[index++]]="${TARGET_BINS_COPY_LIST_BUILDROOT[$i]}"
done

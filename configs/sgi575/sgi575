source $DIR/configs/common/common.base

export CROSS_COMPILE_64=${TOP_DIR}/tools/gcc/gcc-arm-11.2-2022.02-x86_64-aarch64-none-linux-gnu/bin/aarch64-none-linux-gnu-
export CROSS_COMPILE=$CROSS_COMPILE_64
export LINUX_COMPILER=$CROSS_COMPILE_64

#Default linux configs per OS
LINUX_CONFIG_LIST=""
BUSYBOX_LINUX_CONFIG_LIST="defconfig"
BUILDROOT_LINUX_CONFIG_LIST="defconfig"

LINUX_TOOLS_IOMMU_BUILD=0

#Grub Build options
GRUB_BUILD_ENABLED=1
GRUB_PATH=grub
GRUB_BUILD_SCRIPT="build-grub.sh "
GRUB_PLAT_CONFIG_FILE=${TOP_DIR}/build-scripts/configs/sgi575/grub_config/sgi575.cfg

# ARM_TF Flags
ARM_TF_PLATS="sgi575"
ARM_TF_DEBUG_ENABLED=1
ARM_TF_ENABLE_SPM=1
ARM_TF_RAS_FW_FIRST=0
ARM_TF_BL31_IN_DRAM=1
ARM_TF_BUILD_FLAGS=""

# Enable support for secure partition, partition manager and RAS.
if [ "$ARM_TF_ENABLE_SPM" == "1" ]; then
	ARM_TF_BUILD_FLAGS="$ARM_TF_BUILD_FLAGS SPM_MM=$ARM_TF_ENABLE_SPM"
	ARM_TF_BUILD_FLAGS="$ARM_TF_BUILD_FLAGS EL3_EXCEPTION_HANDLING=$ARM_TF_ENABLE_SPM"
	if [ "$ARM_TF_RAS_FW_FIRST" == "1" ]; then
		ARM_TF_BUILD_FLAGS="$ARM_TF_BUILD_FLAGS RAS_EXTENSION=1 SDEI_SUPPORT=1 HANDLE_EA_EL3_FIRST=1"
	fi
fi

# Place BL31 to SRAM/DRAM based on ARM_BL31_IN_DRAM flag
ARM_TF_BUILD_FLAGS="$ARM_TF_BUILD_FLAGS ARM_BL31_IN_DRAM=$ARM_TF_BL31_IN_DRAM"

#TFTF Flags
TFTF_BUILD_ENABLED=0
TFTF_DEBUG_ENABLED=1
TFTF_PATH=validation/comp-test/trusted-firmware-tf
TFTF_PLATS="sgi575"
TFTF_REPORTS="uart:raw"

# Filesystem options
VALID_FILESYSTEMS="busybox buildroot"

#UEFI Options.
UEFI_BUILD_ENABLED=1
if [ "$ARM_TF_ENABLE_SPM" == "1" ]; then
	UEFI_PLATFORMS="sgi575 sgi575_mm_standalone"
else
	UEFI_PLATFORMS="sgi575"
fi
declare -A UEFI_PLAT_sgi575
UEFI_PLAT_sgi575[platname]="Sgi575"
UEFI_PLAT_sgi575[dsc]="Platform/ARM/SgiPkg/Sgi575/Sgi575.dsc"
UEFI_PLAT_sgi575[output]=css-common
UEFI_PLAT_sgi575[defines]="-D EDK2_PLAT=sgi575 -D VALIDATION_LVL=$VALIDATION_LVL"
if [ "$ARM_TF_RAS_FW_FIRST" == "1" ]; then
	UEFI_PLAT_sgi575[defines]="${UEFI_PLAT_sgi575[defines]} -D ENABLE_GHES_MM=TRUE -D ENABLE_FIRMWARE_FIRST=TRUE -D EDK2_ENABLE_EINJ"
fi
UEFI_PLAT_sgi575[binary]="BL33_AP_UEFI.fd"
UEFI_PLAT_sgi575[outbin]=uefi.bin

#Standalone MM Build Options
UEFI_MM_BUILD_ENABLED=$ARM_TF_ENABLE_SPM
declare -A UEFI_PLAT_sgi575_mm_standalone
UEFI_PLAT_sgi575_mm_standalone[platname]="SgiMmStandalone"
UEFI_PLAT_sgi575_mm_standalone[dsc]="Platform/ARM/SgiPkg/PlatformStandaloneMm.dsc"
UEFI_PLAT_sgi575_mm_standalone[output]=css-common
if [ "$ARM_TF_RAS_FW_FIRST" == "1" ]; then
	UEFI_PLAT_sgi575_mm_standalone[defines]="-D ENABLE_GHES_MM=TRUE"
fi
UEFI_PLAT_sgi575_mm_standalone[binary]="BL32_AP_MM.fd"
UEFI_PLAT_sgi575_mm_standalone[outbin]=mm_standalone.bin
UEFI_MM_PAYLOAD_BIN="mm_standalone.bin"

#SCP options
SCP_BUILD_ENABLED=1
SCP_PLATFORMS="sgi575"
SCP_BUILD_MODE=Debug
SCP_COMPILER_PATH=$TOP_DIR/tools/gcc/gcc-arm-11.2-2022.02-x86_64-arm-none-eabi/bin

# Buildroot options
BUILDROOT_DEFCONFIG=aarch64_rdinfra_defconfig

# Misc options
COMPONENT_FLAVOUR=sgi575

TARGET_BINS_PLATS="sgi575"
declare -A TARGET_sgi575
TARGET_sgi575[arm-tf]="sgi575"
TARGET_sgi575[output]="sgi575"
TARGET_sgi575[uefi]="css-common"
TARGET_sgi575[linux]="Image"
TARGET_sgi575[ramdisk]=0x88000000
TARGET_sgi575[tbbr]=1
TARGET_sgi575[scp]="sgi575"
TARGET_sgi575[tftf]="sgi575"
SCP_BYPASS_ROM_SUPPORT[sgi575]=false
BUILD_SCRIPTS="build-arm-tf.sh build-uefi.sh build-linux.sh build-busybox.sh build-buildroot.sh build-grub.sh build-scp.sh build-target-bins.sh "

# UEFI SCT Options
SCT_OUT_DIR=$TOP_DIR/output/sgi575/uefisct
SCT_BUILD_MODE=DEBUG
